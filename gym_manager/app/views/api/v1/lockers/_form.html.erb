<%= f.alert_message "Please fix the errors below." %>
<%= f.select :card_id, options_for_select(Card.all.collect { |card| [card.id, card.user_id] }, {include_blank: false, required: true}) %>
<%= f.form_group :is_free, label: {text: "Choose status"}, layout: :inline do %>
    <%= f.errors_on :is_free %>
    <%= f.radio_button :is_free, "True", label: "FREE", required: true %>
    <%= f.radio_button :is_free, "False", label: "OCCUPIED", required: true %>
    <% end %>
<%= f.form_group :room, label: {text: "Choose locker room"}, layout: :inline do %>
    <%= f.errors_on :room %>
    <%= f.radio_button :room, "M", label: "Male", required: true %>
    <%= f.radio_button :room, "F", label: "Female", required: true %>
    <% end %>
<%= f.submit %>
<%= link_to 'Back', api_v1_lockers_path, :class => "btn btn-info" %>
