<%= f.alert_message "Please fix the errors below." %>
<%= f.form_group :status, label: {text: "Choose status"}, layout: :inline do %>
    <%= f.errors_on :status %>
    <%= f.radio_button :status, "True", label: "ACTIVE", required: true %>
    <%= f.radio_button :status, "False", label: "INACTIVE", required: true %>
<% end %>
<%= f.select :card_id, options_for_select(Card.all.collect { |card| [card.id, card.user_id] }, {include_blank: false, required: true}) %>
<%= f.select :user_id, options_for_select(User.all.collect { |user| [user.name, user.id] }, {include_blank: false, required: true}) %>
<%= f.submit %>
<%= link_to 'Back', api_v1_memberships_path, :class => "btn btn-info" %>
