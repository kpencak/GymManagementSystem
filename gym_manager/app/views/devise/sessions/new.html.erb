<body class="lockers">
  <div class="container">
    <h1>Log in</h1>

    <%= bootstrap_form_with(model: resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" , :class => "btn btn-secondary btn-lg text-light"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</body>